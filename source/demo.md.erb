def replace_images_dir
        return if images_dir == 'images'

        open(File.join(location, 'source', css_dir, 'all.css'), 'r+') {|f|
          f.flock(File::LOCK_EX)
          body = f.read
          body = body.gsub(/images/, images_dir)
          f.rewind
          f.puts body
          f.truncate(f.tell)
        }
